{
    "name": "phariscope/doctrine-testing-tools",
    "type": "library",
    "description": "A PHP component to test Doctrine Repositories",
    "keywords": ["doctrine", "unit", "test"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Alban Bernard",
            "email": "alban.leandre.bernard@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "doctrine/orm": "^2|^3",
        "doctrine/doctrine-bundle": "^2",
        "symfony/http-kernel": "^6|^7.0",
        "symfony/framework-bundle": "^6|^7.0",
        "symfony/runtime": "^6|^7.0",
        "symfony/yaml": "^6|^7.0",
        "symfony/dotenv": "^6|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "phpstan/phpdoc-parser": "^1.20",
        "phpstan/phpstan": "1.10.15",
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.27",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "DoctrineTestingTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoctrineTestingTools\\Tests\\": "tests/unit"
        }
    }
}

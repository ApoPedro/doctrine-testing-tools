{
    "name": "phariscope/doctrine-testing-tools",
    "type": "composer-plugin",
    "description": "A PHP component to test Doctrine Repositories",
    "keywords": ["doctrine", "unittests"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Alban Bernard",
            "email": "alban.leandre.bernard@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.27",
        "phpstan/phpdoc-parser": "^1.20",
        "phpstan/phpstan": "1.10.15",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Phariscope\\DoctrineTestingTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DatamapsPHP\\Tests\\": "tests/unit"
        }
    }
}
